@model CarRental.Models.EntityFramework.Musteri
@{
    ViewBag.Title = "Sing Up";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--== Page Title Area Start ==-->
<section id="page-title-area" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <!-- Page Title Start -->
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>Sign Up</h2>
                    <span class="title-line"><i class="fa fa-car"></i></span>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
                </div>
            </div>
            <!-- Page Title End -->
        </div>
    </div>
</section>
<!--== Page Title Area End ==-->
<!--== Login Page Content Start ==-->
<section id="lgoin-page-wrap" class="section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-5 col-md-8 m-auto">
                <div class="login-page-content">
                    <div class="login-form">
                        <h3>Sign Up</h3>
                        @using (Html.BeginForm("Save", "Customer",FormMethod.Post))
                        {
                            <form action="index.html">
                                <div class="name">
                                    <div class="row">
                                        <div class="col-md-6">
                                            @Html.TextBoxFor(m => m.Ad , new { @placeholder = "First Name" })
                                        </div>
                                        <div class="col-md-6">
                                            @Html.TextBoxFor(m => m.Soyad, new { @placeholder = "Last Name" })
                                        </div>
                                    </div>
                                </div>
                                <div class="username">
                                    @Html.TextBoxFor(m => m.Email, new { @placeholder = "E-Mail" })
                                </div>
                                <div class="username">
                                    @Html.TextBoxFor(m => m.TelNo, new { @placeholder = "Phone Number" })
                                </div>
                                <div class="password">
                                    @Html.TextBoxFor(m => m.Sifre, new { @placeholder = "Password", type = "password" })
                                </div>
                                <div class="log-btn">
                                    <button type="submit"><i class="fa fa-check-square"></i> Sign Up</button>
                                </div>
                            </form>
                        }
                    </div>

                  
                </div>
            </div>
        </div>
    </div>
</section>
<!--== Login Page Content End ==-->
