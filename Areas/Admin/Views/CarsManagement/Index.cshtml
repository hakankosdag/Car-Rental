@model CarRental.Areas.Admin.Models.Cars.Car
@{
    ViewBag.Title = "Cars";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Araba Listesi
        <a href="@Url.Action("NewCar","CarsManagement")" class="btn btn-success" style="float:right">Yeni Araba</a>
    </div>
        <div class="table-responsive">
            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                    <div class="col-sm-12">
                        <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                            <thead>
                                <th>Marka</th>
                                <th>Model</th>
                                <th>Vites</th>
                                <th>Yakıt</th>
                                <th>Sınıf</th>
                                <th>Fiyat</th>
                                <th>İşlemler</th>
                            </thead>
                            <tbody>
                                @foreach (var araba in Model.arabaList)
                                {
                                    <tr role="row" class="odd">
                                        <td>@araba.Marka</td>
                                        <td>@araba.Model</td>
                                        <td>@araba.Vites</td>
                                        <td>@araba.Yakit</td>
                                        <td>@araba.Sinif</td>
                                        <td>@araba.Fiyat.Value.ToString("c")</td>
                                        <td><a href="@Url.Action("NewCar","CarsManagement",new { id = araba.ID })" class="btn btn-warning">Düzenle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
            </div>
        </div>
    <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>